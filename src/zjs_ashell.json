{
    "module": "ashell",
    "depends": [
        "ble",
        "common",
        "console",
        "fs",
        "gpio",
        "i2c",
        "math",
        "performance",
        "pwm",
        "sensor_accel",
        "sensor_gyro",
        "sensor_light",
        "sensor_temp",
        "spi"
    ],
    "targets": ["arduino_101", "stm32f4_disco", "olimex_stm32_e407"],
    "src": [
        "src/ashell/ashell.c",
        "src/zjs_file_utils.c",
        "src/ashell/jerry-code.c"
    ],
    "zephyr_conf": {
        "all": [
            "CONFIG_EARLY_CONSOLE=y",
            "CONFIG_CONSOLE_HANDLER=y",
            "CONFIG_CONSOLE_HANDLER_SHELL=y",
            "CONFIG_IHEX_UPLOADER_DEBUG=n",
            "CONFIG_REBOOT=y",
            "CONFIG_USB=y",
            "CONFIG_USB_DEVICE_STACK=y",
            "CONFIG_USB_DEBUG=n",
            "CONFIG_SERIAL=y",
            "CONFIG_UART_INTERRUPT_DRIVEN=y",
            "CONFIG_UART_LINE_CTRL=y",
            "CONFIG_USB_CDC_ACM_DEBUG=n",
            "CONFIG_DEVICE_POWER_MANAGEMENT=y",
            "CONFIG_SPI=y",
            "CONFIG_GPIO=y"
        ],
        "arduino_101": [
            "CONFIG_USB_DW=y",
            "CONFIG_USB_DW_DEBUG=n",
            "CONFIG_BT=y",
            "CONFIG_BT_LE=y",
            "CONFIG_BT_SMP=y",
            "CONFIG_BT_PERIPHERAL=y",
            "CONFIG_USB_DEVICE_VID=0x8086",
            "CONFIG_USB_DEVICE_PID=0xF8A1"
        ]
    },
    "zjs_config": [
        "-I./src",
        "-I${ZEPHYR_BASE}/ext/fs/fat/include",
        "-I./deps",
        "-DZJS_ASHELL"
    ]
}
